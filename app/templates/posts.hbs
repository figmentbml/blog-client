<div class="posts-wrapper">
  <aside>
    <h2>Posts</h2>
    {{#each post in model}}
      <h4>{{#link-to 'post' post}}{{post.title}}{{/link-to}}</h4>
    {{/each}}
  </aside>

  <main>
    {{outlet}}
    {{#each post in model}}
    <h3>{{#link-to 'post' post}}{{post.title}}{{/link-to}}</h3>
    <p>
      {{post.body}}
    </p>
    {{/each}}
  </main>
</div>
